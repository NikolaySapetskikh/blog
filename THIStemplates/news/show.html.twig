{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}
    <h1>News</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ news.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ news.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ news.content }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ news.author }}</td>
            </tr>
            <tr>
                <th>PublishedTime</th>
                <td>{{ news.publishedTime ? news.publishedTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Actions</th>
                <td>{{ news.actions ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>OriginalLink</th>
                <td>{{ news.originalLink }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('news_index') }}">back to list</a>

    <a href="{{ path('news_edit', {'id': news.id}) }}">edit</a>

    {{ include('news/_delete_form.html.twig') }}
{% endblock %}
